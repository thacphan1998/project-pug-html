.wrapGalleryImage 
    .container-xl.containerItem
        .contentItem
            +render_title('Hình ảnh & tiến độ')

            .row.wrapBoxImage.wraplightGallery 
                each item in data.gallery_image
                    .col-sm-3.colItemImage(data-src= item.url_img)
                        .wrapImage
                            a.imageItem.wrapImgResize(href= item.url_img title= item.title)
                                img(src= item.url_img alt= item.title)

            .wrapBoxImageMobile
                .showSlideGallMobile.wraplightGallery
                    each item in data.gallery_image
                        .colItemMobile(data-src= item.url_img)
                            a.imageItem.wrapImgResize(href='javascript:void(0);' title= item.title)
                                img(src= item.url_img alt= item.title)