                                        if item.spec_project.towers
                                            span.towers= item.spec_project.towers

                                    p.tagAddress= item.address
                                    p.textDes= item.text
                                    
                                    if item.company
                                        .tagCompany
                                            img.companyName()
                                            | ABV
